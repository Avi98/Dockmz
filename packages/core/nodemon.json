{
  "copiedFrom": "https://talohana.com/blog/typescript-and-nodemon-the-ultimate-setup",
  "restartable": "rs",
  "ignore": [".git", "node_modules/", "dist/", "coverage/"],
  "watch": ["src/"],
  "execMap": {
    "ts": "node -r ts-node/register"
  },
  "exec": "ts-node src/index.ts",
  "env": {
    "NODE_ENV": "develop"
  },

  "ext": "js,json,ts"
}
