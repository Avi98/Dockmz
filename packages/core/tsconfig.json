{
  "extends": "tsconfig/base.json",
  "include": ["src/*/**.ts"],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "isolatedModules": true,
    "outDir": "dist"
  }
}
